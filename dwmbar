#    echo $key
#    case $key in
#	less)
#	    echo "us";;
#	semicolon)
#	    echo "mex";;
#	esac
#    }

while true; do

    out=$(echo "$(fecha) | Bat: $(bat) | $(red)")
#    echo $out | tr '\n' ' '

    xsetroot -name "$out"
    echo "$out"
    
    sleep 1m
done
