#! /bin/sh

fecha(){
    date '+%b %d, %H:%M'
}

bat(){
    echo "$(cat /sys/class/power_supply/BAT0/capacity)%"
    }

vol(){
    echo "$(amixer get Master | awk -F'[][]' 'END{ print $2 }')"
    }

red(){
    if ping gnu.org -c1 > /dev/null; then
	echo "ïƒ¨"
    else
	echo "--"
    fi
   } 

#kbd(){
